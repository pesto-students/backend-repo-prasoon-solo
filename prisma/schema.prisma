generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AccountRole {
  USER
  ADMIN
  SUPERADMIN
}

enum DifficultyLevel {
  EASY
  MEDIUM
  HARD
}

model User {
  id        Int         @id @default(autoincrement())
  fullName  String
  email     String      @unique
  password  String
  role      AccountRole
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Problem {
  id         Int             @id @default(autoincrement())
  title      String
  difficulty DifficultyLevel
  category   String
  order      Int
  videoId    String?
}
